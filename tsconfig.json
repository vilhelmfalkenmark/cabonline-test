{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"jsx": "preserve",
		"lib": ["dom", "es2017"],
		"moduleResolution": "node",
		"allowJs": false,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"root/*": ["./*"],
			"server/*": ["server/*"],
			"components/*": ["src/components/*"],
			"hocs/*": ["src/hocs/*"],
			"styles/*": ["src/styles/*"],
			"store/*": ["store/*"],
			"config/*": ["config/*"],
			"utils/*": ["utils/*"]
		}
	},
	"include": ["./"],
	"exclude": ["node_modules"]
}
